generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum category {
  Mountains
  Landmarks
  Theaters
  Camps
  Tropical
  Amusements
  Meadows
  Deserts
  Shopping
  Windmills
  Forests
  Beaches
  Countryside
  Museums
  Sailing
  Arctic
  Rainforests
  Lakes
  Golfing
  Cliffs
  Urban
  Cabin
  Coasts
  Nature
  Villa
  Wooden
  Lighthouses
  Cottage
  Skiing
  Glacier
  Hiking
  Luxury
  Apartment
  Downtown
  Architecture
  Cathedral
  Sunshine
  Outdoors
  Bay
  Nordic
  Minimal
  Islands
}

model Category {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  title     category
  listings  Listing[]
}

model Listing {
  id            String         @id @default(uuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  title         String
  subtitle      String
  startDate     String
  endDate       String
  price         Int
  rating        Float
  listingImages ListingImage[]
  categories    Category[]
  // geoId         String
  // geo           Geo            @relation(fields: [geoId], references: [id])
}

model ListingImage {
  id        String  @id @default(uuid())
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id])
  source    String
}

model Geo {
  id        String @id @default(uuid())
  country   String
  state     String
  city      String
  latitude  Float
  longitude Float
  // listings  Listing[]
}
